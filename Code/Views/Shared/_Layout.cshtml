            <ul class="nav navbar-nav navbar-right">
                
                <li><a href="/Employee/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>
  <div class="container">
      
      @RenderBody()
  </div>

    
