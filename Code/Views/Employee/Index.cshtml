@model List<_19Jul2020_1.Models.Employee>
@{
    ViewBag.Title = "Index";

}


<table class="table table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Salary</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>@item.Email</td>
                <td>
                    <a href="/Employee/Edit/@item.Id"  >Edit</a>
                    <a class="delete"  href="/Employee/Delete/@item.Id"  >Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<script type="text/javascript">

    $(document).ready(function () {
     
        $('.delete').click(function (e) {
            e.preventDefault();
            var conf = confirm('Are you want to delete this record?');
            if (conf) {
                var b = $(this);
                var myurl = $(b).attr('href');

                $.ajax(
                    {
                        type: "GET",
                        url: myurl,
                        data: {},
                        //contentType: "application/json; charset=utf-8",
                        //dataType: "json",
                        success: function (result) {
                            $('#snackbar').text(result);
                            $('#snackbar').addClass('show');

                            setTimeout(function () {
                                $('#snackbar').removeClass('show');
                            }, 1000);
                            location.reload();
                        }
                    });
            }
        });

    });

</script>
